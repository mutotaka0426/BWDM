class Nest

types 
test = nat;
year = int;

values

public static rule1 : nat = 4;
public static rule2 : nat = 100;
public static rule3 : nat = 400;

instance variables

private current_year : year := 2000;

operations

public 西暦設定 : year ==> int
  西暦設定(年) == current_year := 年;

public うるう年判定 : () ==> seq of char
  うるう年判定() ==
    if(current_year mod rule1 = 0) then
      if(current_year mod rule2 = 0) then
        if(current_year mod rule3 = 0) then
          return "うるう年"
        else
          return "平年"
      else
        return "うるう年"
    else
      return "平年";

functions

public うるう年判定仕様 : year -> seq of char
  うるう年判定仕様(年) ==
    if(年 mod 4 = 0) then
      if(年 mod 100 = 0) then
        if(年 mod 400 = 0) then
          "うるう年"
        else
          "平年"
      else
        "うるう年"
    else
      "平年";

end Nest
